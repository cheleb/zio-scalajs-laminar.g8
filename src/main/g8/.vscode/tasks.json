{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "demo",
            "runOptions": {
                "runOn": "$if(runOnFolderOpen.truthy)$folderOpen$else$default$endif$"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "setup",
                "runDemo"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "setup",
            "type": "shell",
            "command": "./scripts/setup.sh",
            "presentation": {
                "panel": "dedicated",
                "group": "runDevCmd",
                "close": true
            },
            "group": "build"
        },
        $if(db.truthy)$
        {
            "label": "docker",
            "icon": {
                "id": "database"
            },
            "type": "shell",
            "command": "docker-compose up",
            "presentation": {
                "panel": "dedicated",
                "group": "back"
            },
            "group": "build"
        },
        $endif$
        {
            "label": "docker",
            "icon": {
                "id": "database"
            },
            "type": "shell",
            "command": "docker-compose up",
            "presentation": {
                "panel": "dedicated",
                "group": "back"
            },
            "group": "build"
        },
        {
            "label": "docker",
            "icon": {
                "id": "database"
            },
            "type": "shell",
            "command": "docker-compose up",
            "presentation": {
                "panel": "dedicated",
                "group": "back"
            },
            "group": "build"
        },
        {
            "label": "runDemo",
            "dependsOrder": "parallel",
            "dependsOn": [
                $if(db.truthy)$
                "docker",
                $endif$
                "serverRun",
                "fastLink",
                "npmDev"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "fastLink",
            "icon": {
                "id": "browser"
            },
            "type": "shell",
            "command": "./scripts/fastLink.sh",
            "presentation": {
                "panel": "shared",
                "group": "front"
            },
            "group": "build"
        },
        {
            "label": "serverRun",
            "icon": {
                "id": "server-process"
            },
            "type": "shell",
            "command": "./scripts/serverRun.sh",
            "presentation": {
                "panel": "shared",
                "group": "back"
            },
            "group": "build"
        },
        {
            "label": "npmDev",
            "icon": {
                "id": "package"
            },
            "type": "shell",
            "command": "./scripts/npmDev.sh",
            "presentation": {
                "panel": "shared",
                "group": "front"
            },
            "group": "build"
        }
    ]
}